---
import Layout from '../layouts/Layout.astro';
import Footer from '../components/Footer.tsx';
import * as footer from '../../content/footer.md';
import MarkdownRenderer from '../components/MarkdownRenderer.tsx';
import * as content from '../../content/imprint.md';
import SimpleHeader from '../components/SimpleHeader.tsx';
import talentLinxLogo from '../assets/talentlinx-logo.png';
import {Image} from 'astro:assets';
---

<Layout title="TalentLinx | Impressum" description="Hier finden Sie das Impressum von TalentLinx">
    <main>
        <SimpleHeader>
            <Image src={talentLinxLogo} alt="TalentLinx Logo" style="max-height: 32px; height: auto; width: auto;"/>
        </SimpleHeader>
        <MarkdownRenderer content={content}/>
        <Footer footer={footer}/>
    </main>
</Layout>